{
  "$schema": "https://encore.dev/schemas/infra.schema.json",
  "sql_servers": [
    {
      "host": "autorack.proxy.rlwy.net:18181",
      "tls_config": {
        "disable_ca_validation": true
      },
      "databases": {
        "railway": {
          "name": "railway",
          "username": "postgres",
          "password": { "$env": "DB_PASSWORD" },
          "client_cert": {},
          "min_connections": 1,
          "max_connections": 10
        }
      }
    }
  ]
}
